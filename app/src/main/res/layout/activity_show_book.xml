<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <ViewSwitcher
        android:id="@+id/switcher_for_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/book_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/show_book_photo"
                            android:layout_width="280dp"
                            android:layout_height="280dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/user_profile_pic"
                            android:padding="20dp"
                            android:paddingTop="10dp"
                            android:src="@mipmap/icon" />

                    </android.support.v7.widget.CardView>

                    <Button
                        android:id="@+id/show_book_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/user_location" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="?android:attr/listDivider"/>




                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">


                            <TextView
                                android:id="@+id/text_show_book_isbn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginTop="8dp"
                                android:hint="@string/book_ISBN"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/show_book_isbn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_show_book_isbn"
                                android:layout_gravity="bottom"
                                android:hint="@string/book_ISBN"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/text_show_book_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/show_book_isbn"
                                android:layout_gravity="bottom"
                                android:hint="@string/book_title"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/show_book_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_show_book_title"
                                android:hint="@string/book_title"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/text_show_book_author"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/show_book_title"
                                android:layout_gravity="bottom"
                                android:hint="@string/book_author"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/show_book_author"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_show_book_author"
                                android:layout_gravity="bottom"
                                android:hint="@string/book_author"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/text_show_book_publisher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/show_book_author"
                                android:layout_gravity="bottom"
                                android:hint="@string/book_publisher"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/show_book_publisher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_show_book_publisher"
                                android:hint="@string/book_publisher"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/text_show_book_edition_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/show_book_publisher"
                                android:layout_gravity="bottom"
                                android:hint="@string/book_edition_year"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/show_book_edition_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_show_book_edition_year"
                                android:hint="@string/book_edition_year"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/text_show_book_conditions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/show_book_edition_year"
                                android:layout_gravity="bottom"
                                android:hint="@string/book_conditions"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/show_book_conditions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_show_book_conditions"
                                android:hint="@string/book_conditions"
                                android:textSize="20sp" />


                        </RelativeLayout>
                    </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:id="@+id/sending_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/show_book_conditions"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/send_request"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="2"
                            android:hint="@string/send_request"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/open_chat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/show_book_conditions"
                            android:layout_weight="2"
                            android:hint="@string/chats_activity_title"
                            android:textSize="20sp" />

                    </LinearLayout>
                </LinearLayout>


            </ScrollView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/return_to_book"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:background="@drawable/com_facebook_close" />

                <fragment
                    android:id="@+id/fragment_map_book"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    tools:context="com.example.mapwithmarker.MapsMarkerActivity" />
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </ViewSwitcher>

</LinearLayout>